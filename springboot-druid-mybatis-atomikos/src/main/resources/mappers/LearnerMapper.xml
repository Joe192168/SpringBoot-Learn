<?xml version="1.0"  encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.joe.atomikos.mapper.LearnerMapper">

    <select id="selectAll" resultType="com.joe.atomikos.pojo.Learner">
        select * from learner
    </select>

    <insert id="save">
        insert into learner (name, age, salary, birthday) VALUES (#{lea.name}, #{lea.age}, #{lea.salary}, #{lea.birthday})
    </insert>

    <select id="selectById" resultType="com.joe.atomikos.pojo.Learner">
      select * from learner where name = #{id}
    </select>

    <update id="modify">
        update learner set name=#{lea.name},age=#{lea.age},salary=#{lea.salary},birthday=#{lea.birthday} where id=#{lea.id}
    </update>

    <delete id="delete">
        delete from learner where id = #{id}
    </delete>

</mapper>